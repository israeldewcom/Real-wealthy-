# =============================================
# RAW WEALTHY BACKEND v5.0 - PRODUCTION CONFIG
# =============================================

# Server Configuration
NODE_ENV=production
PORT=5000
CLIENT_URL=https://your-frontend-domain.com
SERVER_URL=https://raw-wealthy-backend.onrender.com
API_VERSION=v5

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/raw-wealthy-v5?retryWrites=true&w=majority
DB_MAX_POOL_SIZE=20
DB_MIN_POOL_SIZE=5
DB_CONNECTION_TIMEOUT=30000

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_minimum_64_characters_long_for_enhanced_security_v5
JWT_EXPIRES_IN=30d
JWT_REFRESH_SECRET=your_refresh_token_secret_minimum_64_characters_v5
JWT_REFRESH_EXPIRES_IN=90d

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=Raw Wealthy <noreply@rawwealthy.com>

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/jpg,application/pdf
UPLOAD_PATH=./uploads

# Cloudinary Configuration (Optional but Recommended)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Redis Configuration (Optional for Production)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# Payment Gateway Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
FLUTTERWAVE_SECRET_KEY=FLWSECK_TEST_your_flutterwave_key
PAYSTACK_SECRET_KEY=sk_test_your_paystack_key

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Push Notification Configuration
VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key
VAPID_EMAIL=your-email@domain.com

# Analytics & Monitoring
SENTRY_DSN=your_sentry_dsn
LOG_LEVEL=info

# Security Configuration
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=10
LOGIN_LOCKOUT_TIME=86400000
PASSWORD_RESET_EXPIRES=600000
SESSION_SECRET=your_session_secret_minimum_32_chars

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_AUTH_MAX=10
RATE_LIMIT_INVESTMENT_MAX=5

# Cron Job Configuration
CRON_EARNINGS_SCHEDULE=0 0 * * *
CRON_MATURITY_SCHEDULE=0 * * * *
CRON_CLEANUP_SCHEDULE=0 2 * * *

# External APIs
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key
FINNHUB_API_KEY=your_finnhub_key

# App Configuration
APP_NAME=Raw Wealthy Investment Platform
SUPPORT_EMAIL=support@rawwealthy.com
CONTACT_PHONE=+2348123456789
COMPANY_ADDRESS=123 Investment Street, Lagos, Nigeria
LEGAL_NAME=Raw Wealthy Investments Ltd.
REGISTRATION_NUMBER=RC-1234567

# Feature Flags
FEATURE_2FA=true
FEATURE_REFERRALS=true
FEATURE_KYC=true
FEATURE_AUTO_INVEST=false
FEATURE_CRYPTO_PAYMENTS=true
FEATURE_SMS_NOTIFICATIONS=true
FEATURE_PUSH_NOTIFICATIONS=true

# Business Configuration
